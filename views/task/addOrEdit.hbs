{{!-- Add a ToDo html--}}

<h1 style="text-align: center;">{{viewTitle}}</h1>

{{!-- form is created here --}}

<form action="/task" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{task._id}}">

    <div class="form-group">
        <label>To Do Name</label>
        <input type="text" class="form-control" name="taskName" placeholder="Task Name" value="{{task.taskName}}">
        <div class="text-danger">
            {{task.taskNameError}}</div>
    </div>
    <div class="form-group">
        <label>To Do Description</label>
        <input type="text" class="form-control" name="taskDescription" placeholder="Task Description"
            value="{{task.taskDescription}}">
        <div class="text-danger">
            {{task.taskDescriptionError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>To Do Category</label>
            <select id="inputState" class="form-control" name="taskCategory" value="{{task.taskCategory}}">
                <option>Personal</option>
                <option>Work</option>
                <option>Hobby</option>
                <option>Hobby</option>
                <option>School</option>
                <option>Cleaning</option>
                <option>Other</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label>Due Date</label>
            <input type="date" class="form-control" name="dueDate" placeholder="Due Date" value="{{task.dueDate}}">
        </div>
    </div>

    {{!-- Submit and view all todo button --}}
    
    <div class="form-group">
        <button style="margin-top: 14px;padding: 12px;" type="submit" class="btn btn-dark"><i
                class="fa fa-database"></i> Submit</button>
        <a style="margin-left:350px;padding: 12px;margin-bottom: -15px;" class="btn btn btn-danger" href="task/list"><i
                class="fa fa-list-alt"></i> View All Todos</a>
    </div>
</form>